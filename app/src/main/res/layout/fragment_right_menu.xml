<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_slidingmenu_left">
    <ImageButton
        android:id="@+id/ibtn_login_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"
        android:background="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"/>
    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="立即登录"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_below="@+id/ibtn_login_photo"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:background="@null"/>
    <Button
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新版本"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="55dp"
        android:background="@null"/>
    <RadioGroup
        android:id="@+id/rgp_right_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/share_little_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_update"
        android:layout_marginBottom="150dp">
        <RadioButton
            android:id="@+id/btn_wechat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/fun_share_weixin"
            android:button="@null"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_qq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/addimport_qq"
            android:button="@null"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/fun_share_friends"
            android:button="@null"
            android:layout_weight="1"/>
        <RadioButton
            android:id="@+id/btn_weibo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@mipmap/fun_share_weibo"
            android:button="@null"
            android:layout_weight="1"/>

    </RadioGroup>

</RelativeLayout>