<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_comment_icon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/biz_pc_main_info_profile_avatar_bg_dark"/>
        <TextView
            android:id="@+id/txt_comment_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="网友评论"
            android:layout_gravity="center_vertical"
            android:textSize="24sp"
            android:layout_weight="1"
            android:gravity="center"/>
        <TextView
            android:id="@+id/txt_comment_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2016-07-27"
            android:layout_gravity="center_vertical"
            android:textSize="16sp"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/txt_comment_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="评论内容。。。"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="15dp"/>
</LinearLayout>