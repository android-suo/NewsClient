<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.feicui.news.WebActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/normalbutton_normal">
        <ImageButton
            android:id="@+id/ibtn_home_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:background="@null"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_title_web"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="资讯"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_comment_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0 跟帖"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:background="@null"/>
        <ImageButton
            android:id="@+id/ibtn_right_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/news_menu"
            android:layout_marginRight="10dp"/>
    </LinearLayout>
    <WebView
        android:id="@+id/web_news"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        >
    </WebView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffcccccc"
        >
        <ImageButton
            android:id="@+id/ibtn_share_web"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_fun_share"
            android:background="@null"
            android:layout_gravity="center_vertical"
             android:layout_marginLeft="10dp"/>
        <ImageButton
            android:id="@+id/ibtn_com_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/icon_center_edit"
            android:background="@null"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/txt_com"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="跟帖"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"/>
        <Button
            android:id="@+id/btn_reflect_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="意见反馈"
            android:background="@null"
            android:gravity="right"
            android:layout_gravity="center_vertical"/>
    </LinearLayout>
</LinearLayout>
