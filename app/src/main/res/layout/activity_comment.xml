<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="edu.feicui.news.CommentActivity"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@mipmap/normalbutton_normal">
        <ImageButton
            android:id="@+id/ibtn_home_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/back"
            android:background="@null"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/txt_title_comment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="评论"
            android:textSize="24sp"
            android:textColor="#ffffff"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>
    <xlistview.XListView
        android:id="@+id/lst_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">
    </xlistview.XListView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">
        <EditText
            android:id="@+id/edt_comment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="说点什么"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/ibtn_send_comment"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@mipmap/send"/>
    </LinearLayout>
</LinearLayout>
